<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/gsy"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="260dp"></com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer>

    <ImageView
        android:id="@+id/iv_fx"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_action_fx"
        android:textColor="@color/white"
        android:layout_width="40dp"
        android:layout_height="40dp"></ImageView>

    <TextView
        android:id="@+id/tv_sc"
        android:layout_marginBottom="10dp"
        android:text="2451"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@id/iv_fx"
        app:layout_constraintLeft_toLeftOf="@id/iv_fx"
        app:layout_constraintBottom_toTopOf="@id/iv_fx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <ImageView
        android:id="@+id/iv_sc"
        android:src="@drawable/ic_action_sc"
        app:layout_constraintLeft_toLeftOf="@id/tv_sc"
        app:layout_constraintRight_toRightOf="@id/tv_sc"
        app:layout_constraintBottom_toTopOf="@id/tv_sc"
        android:layout_width="40dp"
        android:layout_height="40dp"></ImageView>

    <TextView
        android:id="@+id/tv_pl"
        android:layout_marginBottom="10dp"
        android:text="2451"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@id/iv_sc"
        app:layout_constraintLeft_toLeftOf="@id/iv_sc"
        app:layout_constraintBottom_toTopOf="@id/iv_sc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <ImageView
        android:id="@+id/iv_pl"
        android:src="@drawable/ic_action_pl"
        app:layout_constraintLeft_toLeftOf="@id/tv_pl"
        app:layout_constraintRight_toRightOf="@id/tv_pl"
        app:layout_constraintBottom_toTopOf="@id/tv_pl"
        android:layout_width="40dp"
        android:layout_height="40dp"></ImageView>

    <TextView
        android:id="@+id/tv_zan"
        android:layout_marginBottom="10dp"
        android:text="2451"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="@id/iv_pl"
        app:layout_constraintLeft_toLeftOf="@id/iv_pl"
        app:layout_constraintBottom_toTopOf="@id/iv_pl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <ImageView
        android:id="@+id/iv_zan"
        android:src="@drawable/ic_action_zan"
        app:layout_constraintLeft_toLeftOf="@id/tv_zan"
        app:layout_constraintRight_toRightOf="@id/tv_zan"
        app:layout_constraintBottom_toTopOf="@id/tv_zan"
        android:layout_width="40dp"
        android:layout_height="40dp"></ImageView>

    <TextView
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_title"
        android:ellipsize="end"
        android:lines="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_ctime"
        android:layout_width="300dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/tv_ctime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <ImageView
        android:id="@+id/iv_avatarUrl"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/tv_title"
        android:layout_width="40dp"
        android:layout_height="40dp"></ImageView>

    <TextView
        android:textSize="18sp"
        android:text="asdasd"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatarUrl"
        app:layout_constraintTop_toTopOf="@id/iv_avatarUrl"
        app:layout_constraintLeft_toRightOf="@id/iv_avatarUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:textAlignment="center"
        android:text="关注"
        android:textColor="@color/white"
        android:background="@color/red"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        android:layout_width="40dp"
        android:layout_height="wrap_content"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>